<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tanpp"
    tools:layout_editor_absoluteY="25dp">

    <Button
        android:id="@+id/viewRouteListBackBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/leather"
        android:fontFamily="@font/berkleyb"
        android:padding="3dp"
        android:text="To main menu"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/rlTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:fontFamily="@font/aclonica"
        android:paddingLeft="8dp"
        android:text="Routes: "
        android:textColor="@color/colorBlack"
        android:textSize="30sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/viewRouteListID"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/viewRouteListID"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginStart="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rlTitle" />

    <TextView
        android:id="@+id/emptyRouteTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="292dp"
        android:layout_marginTop="292dp"
        android:fontFamily="@font/berkley"
        android:text="There's nothing here yet."
        android:textSize="15sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/viewRouteListID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rlTitle" />

</android.support.constraint.ConstraintLayout>