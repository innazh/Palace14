<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tanpp"
    tools:context="memorypalace.palace14.ChoosePalace"
    tools:layout_editor_absoluteY="73dp">


    <Button
        android:id="@+id/chooseTemplateBackBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:background="@color/leather"
        android:fontFamily="@font/berkleyb"
        android:padding="3dp"
        android:text="To main menu"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/row4" />

    <TextView
        android:id="@+id/choosePalaceInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="114dp"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/berkley"
        android:paddingLeft="8dp"
        android:text="Palace Templates"
        android:textColor="@color/colorBlack"
        android:textSize="30sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/row2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TableRow
        android:id="@+id/row1"
        android:layout_width="0dp"
        android:layout_height="102dp"
        android:layout_marginBottom="101dp"
        android:layout_marginTop="82dp"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/row2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/template1Image"
            android:layout_width="200px"
            android:layout_height="200px"
            android:background="@drawable/rounded_corner"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/temp1Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/berkley"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:text="@string/templateOne"
            android:textColor="@color/colorBlack"
            android:textSize="15sp" />
    </TableRow>

    <TableRow
        android:id="@+id/row2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/row3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choosePalaceInfo">

        <ImageView
            android:id="@+id/template2Image"
            android:layout_width="200px"
            android:layout_height="200px"
            android:background="@drawable/rounded_corner"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/temp2Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/berkley"
            android:inputType="textPersonName"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:text="@string/templateTwo"
            android:textColor="@color/colorBlack"
            android:textSize="15sp" />
    </TableRow>

    <TableRow
        android:id="@+id/row3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/row4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/row2">

        <ImageView
            android:id="@+id/template3Image"
            android:layout_width="200px"
            android:layout_height="200px"
            android:background="@drawable/rounded_corner"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/temp3Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/berkley"
            android:inputType="textPersonName"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:text="@string/templateThree"
            android:textColor="@color/colorBlack"
            android:textSize="15sp" />
    </TableRow>

    <TableRow
        android:id="@+id/row4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="133dp"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/chooseTemplateBackBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/row3">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200px"
            android:layout_height="200px"
            android:background="@drawable/rounded_corner"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/rLName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/berkley"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:text="@string/templateFour"
            android:textColor="@color/colorBlack"
            android:textSize="15sp" />
    </TableRow>

</android.support.constraint.ConstraintLayout>