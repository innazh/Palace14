<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="memorypalace.palace14.ChoosePalace"
    tools:layout_editor_absoluteY="73dp">


    <TextView
        android:id="@+id/choosePalaceInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_marginTop="34dp"
        android:paddingLeft="8dp"
        android:text="Choose a palace:"
        android:textSize="30sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/row1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <TableRow
        android:id="@+id/row1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/row2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choosePalaceInfo">

        <ImageView
            android:id="@+id/template1Image"
            android:layout_width="200px"
            android:layout_height="200px"
            app:srcCompat="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/temp1Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/templateOne"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:textSize="15sp" />
    </TableRow>

    <TableRow
        android:id="@+id/row2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/row3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/row1">

        <ImageView
            android:id="@+id/template2Image"
            android:layout_width="200px"
            android:layout_height="200px"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/temp2Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:inputType="textPersonName"
            android:text="@string/templateTwo"
            android:textSize="15sp" />
    </TableRow>

    <TableRow
        android:id="@+id/row3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/row4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/row2">

        <ImageView
            android:id="@+id/template3Image"
            android:layout_width="200px"
            android:layout_height="200px"
            app:srcCompat="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/temp3Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:inputType="textPersonName"
            android:text="@string/templateThree"
            android:textSize="15sp" />
    </TableRow>

    <TableRow
        android:id="@+id/row4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="152dp"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/row3">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200px"
            android:layout_height="200px"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/textName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:text="@string/templateFour"
            android:textSize="15sp" />
    </TableRow>

</android.support.constraint.ConstraintLayout>