<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cont_item_root"
    tools:layout_editor_absoluteY="25dp"
    android:background="@drawable/luca">

    <TextView
        android:id="@+id/rLName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="98dp"
        android:ems="10"
        android:paddingLeft="20dp"
        android:paddingTop="16dp"
        android:textSize="15sp"
        android:clickable="false"
        android:focusable="false"
        android:fontFamily="@font/berkley"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="200px"
        android:layout_marginEnd="209dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="25dp"
        android:clickable="false"
        android:focusable="false"
        android:background="@drawable/borderplswork"
        app:layout_constraintEnd_toStartOf="@+id/checkBoxSelectObject"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <CheckBox
        android:id="@+id/checkBoxSelectObject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="37dp"
        android:focusable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/rLName" />

</android.support.constraint.ConstraintLayout>